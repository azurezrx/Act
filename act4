import java.util.Scanner;
class operational {
    public static void main(String[] args) {
        
        Scanner in = new Scanner(System.in);
        
        int num;
       
        
        
        System.out.print("Write a number: ");
        num = in.nextInt();
        
        if(num % 2 == 0) {
        System.out.print("The number is even!");}
        
        else {
        System.out.print("The number is odd!"); }
        
        
    }
}
